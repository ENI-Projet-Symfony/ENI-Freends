{% extends 'layouts/Concept/Standard.html.twig' %}

{% block Content %}

    <div class="influence-finder">
        <div class="container-fluid dashboard-content">
            <!-- ============================================================== -->
            <!-- pageheader -->
            <!-- ============================================================== -->
            <div class="row">
                <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                    <div class="page-header">
                        <div class="row">
                            <div class="col-10">
                                <h3 class="mb-2">Liste des Lieux </h3>
                            </div>
                            <div class="col-2">
                                <a href="{{ path('admin_gestion_utilisateur_ajouter') }}" class="text-end float-end mb-2 btn btn-rounded btn-secondary">+ Ajouter un Lieu</a>
                            </div>
                        </div>
                        <div class="page-breadcrumb">
                            <nav aria-label="breadcrumb">
                                <ol class="breadcrumb">
                                    <li class="breadcrumb-item"><a href="#" class="breadcrumb-link">Gestion</a></li>
                                    <li class="breadcrumb-item active" aria-current="page">Lieux</li>
                                </ol>
                            </nav>
                        </div>
                    </div>
                </div>
            </div>
            <!-- ============================================================== -->
            <!-- end pageheader -->
            <!-- ============================================================== -->
            <!-- ============================================================== -->
            <!-- content -->
            <!-- ============================================================== -->
            {% for label, messages in app.flashes %}
                <div class="container">
                    {% for message in messages %}
                        <div class="alert alert-{{ label }}">
                            {{ message }}
                        </div>
                    {% endfor %}
                </div>
            {% endfor %}
            <div class="row">
                <!-- ============================================================== -->
                <!-- search bar  -->
                <!-- ============================================================== -->
                <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                    <div class="card">
                        <div class="card-body">
                            <form>
                                <input class="form-control form-control-lg" type="search" placeholder="Rechercher un lieu" aria-label="Search">
                                <button class="btn btn-outline-primary search-btn" type="submit">Rechercher</button>
                            </form>
                        </div>
                    </div>
                </div>
                <!-- ============================================================== -->
                <!-- end search bar  -->
                <!-- ============================================================== -->
            </div>
            <div class="row">
                <!-- ============================================================== -->
                <!-- basic table  -->
                <!-- ============================================================== -->
                <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                    <div class="card">
                        <h5 class="card-header">Liste des Lieux</h5>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-striped table-bordered first">
                                    <thead>
                                    <tr>
                                        <th>ID</th>
                                        <th>Nom</th>
                                        <th>Rue</th>
                                        <th>Ville</th>
                                        <th>Coordonnées GPS</th>
                                        <th>Actions</th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    {% for lieu in lieux %}
                                        <tr>
                                            <td>{{ lieu.id }}</td>
                                            <td>
                                                <a href="{{ path('admin_gestion_utilisateur_infos', {id:lieu.id}) }}" class="text-primary">{{ lieu.nom|upper }}</a>
                                            </td>
                                            <td>{{ lieu.rue }}</td>
                                            <td>{{ lieu.ville.nom }}</td>
                                            <td>
                                                lat. {{ lieu.latitude }} | long. {{ lieu.longitude }}
                                            </td>
                                            <td>
                                                <a href="{{ path('admin_gestion_utilisateur_infos',{'id': lieu.id}) }}" class="btn btn-xs btn-primary">Détails</a>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                    </tbody>
                                    <tfoot>
                                    <tr>
                                        <th>ID</th>
                                        <th>Nom</th>
                                        <th>Rue</th>
                                        <th>Ville</th>
                                        <th>Coordonnées GPS</th>
                                        <th>Actions</th>
                                    </tr>
                                    </tfoot>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- ============================================================== -->
                <!-- end basic table  -->
                <!-- ============================================================== -->
            </div>
        </div>
    </div>

